.page {
  padding-top: 0rpx;
  background-color: #f6f6f6;
  padding-bottom: 10rpx;
  position: relative;
}

.page-content{
  width: 100%;
  box-sizing: content-box;
  position: relative;
}

.content-card{
  width: 100%;
  height: auto;
  flex-direction: column;
  background-color: #ffffff;
  /*border-bottom: 1px solid #4faaff;
  border-radius: 5%; 
  overflow: hidden; */
}

.content-card:after {        
  content: "";        
  position: absolute;        
  height: 1px;
  bottom: 1; 
  left: 20%;
  right: 0;
  border-bottom: 1px solid #4faaff;
  /* border-bottom: 1px dashed #4faaff;         */
}

.content-card-head{
  position: relative;
  display: flex;
  width: 100%;
  height: 32px;
  flex-direction: row;
}

