.user-icon{
  width: 28px;
  height: 28px;
  margin: 2px 10px 3px 16px;
  border-radius: 50%;
  overflow: hidden;
}

.user-name{
  width: 60%;
  text-align: left;
  margin: auto 0;   /*  上下自动居中   左右为0*/
  font-weight: normal;
  color: #333232;
  font-size: 14px;
  white-space: nowrap;     /* 空白处显示的方式*/
  text-overflow: ellipsis;   /*  自动截取超长部分为...*/
  overflow: hidden;   /* 超出文本框隐藏*/
  display: inline-block;  /* 显示为一行 最好不能加到父类*/
}

.moreMessage-icon{
  position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
  right: 16px;
  width: 20px;
  height: 20px;
  margin-top: 6px;
}

.content-card-body{
  height: 180;
  margin-left: 15px;
  margin-right: 15px;
  position: relative;
  display: flex;
  flex-direction: column;
}

.fix-image-View{
  width: 100%;
  height: 70px;
  flex-direction: row;
}

.fix-image-View .van-image{
  width: 68px;
  height: 68px;
  overflow: hidden;
  box-sizing:border-box;
  margin-right: 3px;
  /* border:1px solid #D9D9D9; */
  
  /* width: 96rpx; height: 82rpx; display: block; box-sizing: border-box */
}
.fix-describe{
  width: 90%;
  margin-top: 3px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  /* 设置行数 */
  -webkit-line-clamp: 1;  
  user-select: select text;
}

.content-card-body view{
  margin: 6px 0px 2px 0px;
}

.content-card-body text{
  font-weight: normal;
  color: #333232;
  font-size: 14px;
}

.fix-status-view{
  /* position: absolute; 要约束所在位置的子元素的位置要设置成绝对 */
  position: relative;
  width: 100%;
  height: 24px;
  display:flex;
  justify-content: flex-end;
  align-items:center;
}

.fix-status-view image{
  margin-right: 3px;
  width: 22px;
  height: 22px;
}

.fix-status-text{
  font-weight: 600;
  color: #252525;
  font-size: 14px;
}

.fix-movable-area{
  z-index: 100; 
  top: 0;
  left: 50px; 
  position: fixed;
  /* 解决movable-area遮挡底层点击的问题 */
  pointer-events: none;
}

.fix-Messages-addBtn {
  left: 20px;
  right: 20px;
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  /* bottom: 140rpx;
  right: 80rpx; */
  overflow: hidden;
  z-index: 100;
  padding: 16rpx 16rpx;
  background-color: #dbdbdb;
  border-radius: 50%;
}

.fix-Messages-addBtn image {
  padding-left: 4rpx;
  width: 100%;
  height: 100%;
}
