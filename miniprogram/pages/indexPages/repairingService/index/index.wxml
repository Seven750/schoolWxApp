<wxs module="fixStatusImageSrc">
  var get = function(status) {
    switch (status) {
      case 0:
        return "../../../../images/fix-status-no.png";
        break;
      case 1:
        return "../../../../images/fix-status-yes.png";
        break;
        case 2:
          return "../../../../images/fix-status-wait.png";
        break;
      default:
        break;
    }
  }
  module.exports.get = get;
</wxs>

