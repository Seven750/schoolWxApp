.fixCplPersonInfo_head{
  background-color: #ffffff;
  position: relative;
  display: flex;
  padding-top: 8px;
  width: 100%;
  height: 120px;
  flex-direction:column;
}

.fixCplMessage_btnRequest{
  height: 100px;
  display: flex;
  background-color: #ffffff;
}

.fixCplMessage_Field{
  width: 100%;
  background-color: #ffffff;
}

.uploadFixImages{
  background-color: #ffffff;
  display: flex;
  padding-left: 12px;
}

.fix-status-view{
  /* position: absolute; 要约束所在位置的子元素的位置要设置成绝对 */
  position: relative;
  width: 100%;
  display:flex;
  justify-content: flex-end;
  align-items: center;
}

.fix-status-view image{
  margin-right: 4px;
  width: 22px;
  height: 22px;
}
