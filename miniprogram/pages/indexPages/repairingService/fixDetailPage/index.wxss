/* pages/indexPages/repairingService/fixDetailPage/index.wxss */

.page {
  padding-top: 0rpx;
  background-color: #f6f6f6;
  position: relative;
}

.content{
  width: 100%;
  box-sizing: content-box;
  position: relative;
}


.fixMessage_head{
  background-color: #ffffff;
  position: relative;
  display: flex;
  width: 100%;
  height: 110px;
  flex-direction:column;
  
}

.user_icon{
  margin-top: 6px;
  width: 48px;
  height: 48px;
  /* margin: 6px 10px 7px 16px; */
  margin: auto;   /*  上下自动居中*/
  border-radius: 50%;
  overflow: hidden;
}

.user_name{
  margin-top: 2px;
  width: 60%;
  text-align: center;
  margin: auto;   /*  上下自动居中   左右为0*/
  font-weight: normal;
  color: #444444;
  font-size: 14px;
  white-space: nowrap;     /* 空白处显示的方式*/
  text-overflow: ellipsis;   /*  自动截取超长部分为...*/
  overflow: hidden;   /* 超出文本框隐藏*/
  display: inline-block;  /* 显示为一行 最好不能加到父类*/
}

.user_commitTime{
  margin-top: 4px;
  width: 90%;
  text-align: right;
  margin: auto;   /*  上下自动居中   左右为0*/
  font-weight: normal;
  color: #333232;
  font-size: 12px;
}

.fix_image_view{
  width: 100%;
  height: 70px;
  flex-direction: row;
}

.fix_image_view .van-image{
  width: 54px;
  height: 54px;
  overflow: hidden;
  box-sizing:border-box;
  margin-right: 3px;
  /* border:1px solid #D9D9D9; */
  
  /* width: 96rpx; height: 82rpx; display: block; box-sizing: border-box */
}

