.userinfo {
  margin-top: 10rpx;
  margin-bottom: 5px;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 130rpx;
  height: 130rpx;
  margin: 30rpx;
  border-radius: 50%;
  overflow:hidden;
}

.cell-group-border{
  margin-top: 15rpx;
}

